  "dependencies": {
    "body-parser": "1.18.3",
    "cors": "2.8.4",
    "dotenv": "6.1.0",
    "express": "4.17.1",
    "express-validator": "^6.11.1",
    "mongoose": "5.4.22",
    "swagger-jsdoc": "3.3.0",
    "swagger-ui-express": "3.0.10",
    "tsc-watch": "4.2.9"
  },
